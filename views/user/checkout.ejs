                <form action="/checkout" method="post" >
                    <div class="row">
                        <div class="col-lg-6">
                            

                        <% address.forEach((userAddress,index) => { %>
                            
                      
                            
                            <div class="col-lg-12">
                                <div class="card card-dashboard">
                                    <div class="card-body ">
                                        <div class="d-inline">
                                        <span class="d-flex justify-content-end">
                                            <input required style="height: 20px;width: 20px;" class="form-check-input" type="radio" value="<%= userAddress._id %>"  name="addressInput" <%= userAddress.isDefault===true?'checked':'' %> > 
                                        </span>                       
                                            <h3 class="card-title ">
                                            Address No. <%= index+1 %>
                                        </h3>
                                        </div>
                                        <p><%= userAddress.name %><br>
                                        <%= userAddress.mobile %><br>
                                        <%= userAddress.street %><br>
                                        <%= userAddress.city %><br>
                                        <%= userAddress.address %><br>
                                        <%= userAddress.pincode %><br>
                                        <!-- <a href="#">Edit <i class="icon-edit"></i></a></p> -->

                                    </div><!-- End .card-body -->
                                </div><!-- End .card-dashboard -->
                            </div><!-- End .col-lg-6 -->


                            <% }); %>

                        </div><!-- End .col-lg-9 -->
                        <aside class="col-lg-6">
                            <div class="summary">
                                <h3 class="summary-title">Your Order</h3><!-- End .summary-title -->

                                <table class="table table-summary">
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Product</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <% cartItems.forEach((items) => { %>
                                            
                                       
                                        <tr>
                                            <td><img src="/uploads/<%= items.productId.mainImage %>" alt="" height="50px" width="50px" style="border: 1px solid grey;"></td>
                                            <td><a href=""><%= items.productId.name %></a></td>
                                            <td><span>$</span><%= items.productId.price*items.quantity %></td>
                                        </tr>

                                       <% }); %>
                                        

                                       
                                        <tr class="summary-subtotal">
                                            <td>Subtotal:</td>
                                            <td></td>
                                            <td><span>$</span><%= cart.total %></td>
                                        </tr><!-- End .summary-subtotal -->

                                        

                                        <tr>
                                            <td>Shipping:</td>
                                            <td></td>
                                            <td>Free shipping</td>
                                        </tr>
                                        <tr class="summary-total">
                                            <td>Total:</td>
                                            <td></td>
                                            <td><span>$</span><%= cart.total %></td>
                                        </tr><!-- End .summary-total -->
                                    </tbody>
                                </table><!-- End .table table-summary -->

                                <div class="accordion-summary" id="accordion-payment">
                                    <div class="card">
                                        <div class="card-header" id="heading-1">
                                            <h2 class="card-title">
                                                <label>
                                                    <input type="radio" name="paymentMethod" value="cod"  required>
                                                    Cash on Delivery (COD)
                                                </label>
                                            </h2>
                                        </div><!-- End .card-header -->
                                    </div><!-- End .card -->










