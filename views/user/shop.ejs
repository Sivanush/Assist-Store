    <script>
        $(document).ready(function () {
            $('#searchForm').submit(function (e) {
                e.preventDefault()

                $.ajax({
                    type: 'GET',
                    url: '/shop',
                    data: $(this).serialize(),
                    success: function (response) {
                        let product = response.product

                        $('#productContainer').empty()
                        $('#pagination').empty()

                        if (product.length > 0) {
                            product.forEach(function (product) {
                                var row = `
                                <div class="col-6 col-md-4 col-lg-4 col-xl-3">
                                <div class="product">
                                <figure class="product-media">
                            <a href="/product-detail/${product._id}">
                                <img
                                src="/uploads/${product.mainImage}"
                                alt="Product image"
                                class="product-image"
                                />
                                <img
                                src="/uploads/${product.hoverImage}"
                                alt="Product image"
                                class="product-image-hover"
                                />
                            </a>

                            <div class="product-action-vertical">
                                <a href="#" class="btn-product-icon btn-wishlist btn-expandable"
                                ><span>add to wishlist</span></a
                                >
                            </div>
                            <div class="product-action action-icon-top">
                                <a href="/product-detail/${ product._id }" class="btn-product btn-cart"
                                ><span>add to cart</span></a
                                >
                            </div>
                            </figure>

                            <div class="product-body">
                            <div class="product-cat">
                                <a href="#"> ${product.category.name } </a>
                            </div>
                            <h3 class="product-title">
                                <a href="/product-detail/${ product._id }"> ${ product.name } </a>
                            </h3>
                            <div class="product-price">
                                <span>$</span>
                                ${ product.mainPrice }
                            </div>
                            </div>
                        </div>
                            </div>


     
                                `;

                                // Append the row to the table
                                $('#productContainer').append(row);
                            })

                            var pagination = `
                            <ul class="pagination pagination-m">
                                <a href="/shop?page=${currentPage - 1}" class="btn btn-link btn-link-dark"><i class="icon-long-arrow-left"></i></a>
                                <% for (let i = 1; i <= totalSearchPage; i++) { %>
                                    <a href="/shop?page=<%= i %>"
                                        class="btn btn-link btn-link-dark <%= currentPage == i ? 'font-weight-bold' : '' %>"><%= i %></a>

                                    <% } %>
                                <a href="/shop?page=${parseInt(currentPage) + 1}" class="btn btn-link btn-link-dark"><i class="icon-long-arrow-right"></i></a>
                            </ul>
                        `;
                        $('#pagination').append(pagination);



                        } else {
                            var noProduct =
                                '<p class="text-center"><p colspan="6"><h5>No users found.</h5></p></p>';
                            $('#productContainer').append(noProduct);
                        }
                    },
                    error: function (error) {
                        console.log(error.message);
                    }
                })
            })
        })
    </script>



    <script>
        function clearAllFilters() {
            // Uncheck all checkboxes
            var checkboxes = document.querySelectorAll('#categoryFilterForm input[type="checkbox"]');
            checkboxes.forEach(function (checkbox) {
                checkbox.checked = false;
            });

            // Submit the form to apply changes
            document.getElementById('categoryFilterForm').submit();
        }
    </script>