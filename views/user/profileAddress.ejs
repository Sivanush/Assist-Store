                                            <div class="card card-dashboard">
                                                <div class="card-body">
                                                    <h3 class="card-title">Address NO.<%= index + 1 %></h3><!-- End .card-title -->
                                                    <p>
                                                        <%= address.name %><br>
                                                        <%= address.address %><br>
                                                        <%= address.city %><br>
                                                        <%= address.pincode %><br>
                                                        <%= address.mobile %><br>
                                                        <a data-toggle="modal" href="#editAddressModal">Edit <i class="icon-edit"></i></a>
                                                    </p>
                                                </div><!-- End .card-body -->
                                            </div><!-- End .card-dashboard -->
                                        </div><!-- End .col-lg-6 -->
                                    <% }); %>
                                <% } else { %>
                                    <div class="col-12 d-flex justify-content-center align-items-center " style="height: 250px;">
                                        <div class="text-center">
                                        <h5>No addresses found.</h5>
                                    </div>
                                    </div>
                                    
                                    
                                <% } %>


                           
                                </div> 
                                
                                <div>
                            
                                    <div class="btn-wrap d-flex justify-content-center align-items-center" ">
